<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakub.kolonieparse.OrganizerFragmentAddNew"
    android:background="@drawable/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="Dodaj nowy"
            android:textSize="30dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:textColor="#FFC3C3C6" />

        <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

            android:layout_margin="6dp"><![CDATA[>

        ]]>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nazwa"
                android:id="@+id/name"
                android:textSize="15dp"
                android:textColor="#FFC3C3C6" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/addname"
                android:textColor="#FFC3C3C6" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Opis"
                android:id="@+id/textView2"
                android:textSize="15dp"
                android:textColor="#FFC3C3C6" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/addinfo"
                android:textColor="#FFC3C3C6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cena"
                android:textSize="15dp"
                android:textColor="#FFC3C3C6" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/addprice"
                android:textColor="#FFC3C3C6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data rozpoczÄ™cia"
                android:id="@+id/textView5"
                android:textSize="15dp"
                android:textColor="#FFC3C3C6" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/addstart"
                android:textColor="#FFC3C3C6" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"

                android:src="@drawable/calendar_icon"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data zakonczenia"
                android:id="@+id/textView3"
                android:textSize="15dp"
                android:textColor="#FFC3C3C6" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/addend"
                android:textColor="#FFC3C3C6" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"

                android:src="@drawable/calendar_icon"
                 />
        </TableRow>
    </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Dodaj "
            android:id="@+id/buttonaddnew"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_margin="6dp"
            android:textColor="#FFC3C3C6" />

    </LinearLayout>



</ScrollView>
